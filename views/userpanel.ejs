                    <form action="/userpanel" method="post">
                        <div>
                            <label>City:</label>
                            <input id="cityInput" type="text" name="cityToAdd"/>
                        </div>
                        <div>
                            <input id="addCityBtn" class="btn btn-primary" type="submit" value="Add city"/>
                        </div>
                    </form> 
                    <form action="/userpanel" method="post">
                        <div>
                            <label>Ciyy:</label>
                            <input id="cityDelInput" type="text" name="cityToDelete"/>
                        </div>
                        <div>
                            <!--<input id="deleteCityBtnn" class="btn btn-primary" type="submit" value="Add city"/>-->
                            <!--<input id="deleteCityBtnnnn" class="btn btn-info" value="Delete city"/>-->
